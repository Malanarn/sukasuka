import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        int pilihan;
        int panjang, lebar, sisi;
        double jariJari;

        System.out.println("====PROGRAM HITUNG BANGUN DATAR====");
        System.out.println("1. Persegi");
        System.out.println("2. Persegi Panjang");
        System.out.println("3. Lingkaran");
        System.out.print("PILIH BANGUN DATAR (1-3): ");
        pilihan = input.nextInt();

        if (pilihan == 1) {
            System.out.print("Masukkan sisi: ");
            sisi = input.nextInt();
            System.out.println("Luas persegi: " + (sisi * sisi));
            System.out.println("Keliling persegi: " + (4 * sisi));
        } else if (pilihan == 2) {
            System.out.print("Masukkan panjang: ");
            panjang = input.nextInt();
            System.out.print("Masukkan lebar: ");
            lebar = input.nextInt();
            System.out.println("Luas persegi panjang: " + (panjang * lebar));
            System.out.println("Keliling persegi panjang: " + (2 * (panjang + lebar)));
        } else if (pilihan == 3) {
            System.out.print("Masukkan jari-jari: ");
            jariJari = input.nextDouble();
            System.out.println("Luas lingkaran: " + (3.14 * jariJari * jariJari));
            System.out.println("Keliling lingkaran: " + (2 * 3.14 * jariJari));
        } else {
            System.out.println("Pilihan tidak valid.");
        }

        System.out.println("Program selesai.");
    }
}
