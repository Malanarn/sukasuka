#include <iostream>
#include <fstream>
using namespace std;

int main(){
	int n;
	cout<<"Masukkan n : ";
	cin>> n;
	
	//open an output file for spooling
	ofstream outputFile("output2.txt");
	if(!outputFile){
		cerr << "failed to open output file." << endl;
		return 1;
	}
	
	//spool data to the output file
	for(int i=1; i<=n; i++){
		outputFile << "Line " << i << endl;
	}
	
	//close the output filr
	outputFile.close();
	
	//open an input file for spooling
	ifstream inputFile("output2.txt");
	if(!inputFile){
		cerr << "Failed to open input file." << endl;
		return 1;
	}
	
	//read and display data from the input file
	string line;
	while (getline(inputFile, line)){
		cout << "Read from file : " << line << endl;
	}
	
	//close the input file
	inputFile.close();
	return 0;
}
